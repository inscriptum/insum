{
  "packages": [
    "packages/components/*",
    "packages/configs/*"
  ],
  "command": {
    "version": {
      "allowBranch": ["master", "feature/*", "bug/*", "patch/*", "test/*"],
      "conventionalCommits": true,
      "exact": true,
      "gitRemote": "origin",
      "message": "chore(release): publish"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md",
    "**/package-lock.json"
  ],
  "version": "independent"
}
